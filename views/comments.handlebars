<script>
    var reply = document.getElementsByClassName("reply")
    for (var i = 0; i < reply.length; i++) {

        reply[i].addEventListener("click", function () {
            let parentid = this.getAttribute("data-parentId")
            let postid = this.getAttribute("data-postId")
            let location = this.getAttribute("data-location")

            var confirm=document.getElementById("makereply")
            confirm.setAttribute("data-parentId",parentid)
             confirm.setAttribute("data-postId",postid)
              confirm.setAttribute("data-location",location)
        })
    }


</script>